<%# new post form %>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

        <h1 class="modal-title fs-5 text-center mt-4" id="staticBackdropLabel">Create a new post</h1>


      <div class="modal-body" data-controller="input-box" >
        <%= simple_form_for post do |f| %>
          <%= f.input :title %>
          <%= f.input :content %>
          <%= f.association :emotion,
                collection: parent_emotions,
                input_html: { data: { "input-box-target" => "emotion", action: "change->input-box#toggleOtherEmotion"}} %>
          <div  class='my-3' data-input-box-target="childEmotion"></div>
      </div>

        <%= f.submit class: 'btn text-primary mb-2' %>
        <% end %>
        <button type="button" class="btn text-secondary mb-1" data-bs-dismiss="modal">cancel</button>

    </div>
  </div>
</div>

<div class="modal fade" id="new-comment-<%=post.id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <h1 class="modal-title fs-5 text-center mt-4" id="exampleModalLabel">Add a comment</h1>
      <div class="modal-body text-center">
        <%= simple_form_for [post, @comment] do |f| %>
          <%= f.input :content, label: '', placeholder: 'Add a comment' %>
          <%= f.submit class: 'btn text-primary'%>
        <% end %>
      </div>
    </div>
  </div>
</div>

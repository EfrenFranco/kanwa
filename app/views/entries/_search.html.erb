<div class="row justify-content-center">
  <div class="my-3 ml-3">
    <%= form_with url: entries_path, method: :get, class: "d-flex justify-content-center" do %>
      <div class="row justify-content-around px-4">
        <div class="col-10 ">
          <%= text_field_tag :query,
        params[:query],
        class: "form-control searchbar",
        placeholder: 'Search by keyword...'
        %>
          <%# Date range filter is from here %>
        </div>
        <div class="col-2">
          <div id="calendar"><label for="datefilter" i class="fa-regular fa-calendar fa-2xl" style="">
              <%= hidden_field_tag :datefilter, params[:datefilter], data:{controller: "flatpickr"}, class:"d-none"%>
            </label>
          </div>
        </div>
        <div class="col-12 text-center mt-2">
          <button type="submit" class= "btn btn-primary mt-2"> <i class="fa-solid fa-magnifying-glass"></i> Search
          </button>
        </div>
        <%# Date range filter ends here %>
      </div>
    <% end %>
  </div>
</div>

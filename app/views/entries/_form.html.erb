<%= simple_form_for entry do |f| %>
  <%= f.input :situation, collection: ['family', 'work', 'friends', 'relationship', 'other'] %>
  <%= f.association :emotion, collection: emotions %>
  <%= f.input :action, placeholder: "Did you do the opposite action to how your emotion told you to act?", collection: ['Yes', 'No'] %>
  <%= f.input :consequence, placeholder: "Did things go the way you wanted through your action?", collection: ['Yes', 'No'] %>
  <%= f.submit %>
<% end %>

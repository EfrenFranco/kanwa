<div class="container pt-4">
  <div class="d-flex justify-content-center">
    <h1>Entry History</h1>
  </div>
  <%= render "search" %>
  <%# This is the end of the dropdown code %>
  <%# <%= render "search-category" %>  <%# Change render name to correct one later  %>
  <% if @g3.present? %>
    <div class="container">
      <h2> Most common situation : <%= @g3.values.first.max_by {|situation, count| count}[0] %></h2>
      <h2> Count : <%= @g3.values.first.max_by {|situation, count| count}[1] %></h2>
      <h3> Control rate : <%= @yes_percentage %>% </h3>
    </div>
  <% end %>
  <div class='entries'>
    <%= link_to 'generate pdf', entries_path(params.permit(:query, :datefilter).merge(format: :pdf)), target: "_blank", class: 'btn btn-success p-2 my-3'   %>
    <%# Pagy %>
    <div class="d-flex justify-content-center pt-3">
      <div class="row">
        <div class="col-12 ">
          <%== pagy_bootstrap_nav(@pagy) %>
        </div>
      </div>
    </div>
    <%# Entries %>
    <%= render 'entries', entries: @entries %>
  </div>
</div>

<% @entries.each do |entry| %>
  <div class="card card-trip text-bg-light mb-3 od py-1 px-2">
    <div class="d-flex justify-content-between px-3 pt-3">
      <p class="pt-2 mb-0 fs-5"><%= entry.emotion.name.capitalize %></p>
      <p class="pt-2 mb-0"><%= entry.created_at.strftime("%F") %></p>
    </div>
    <div class="justify-content-center p-3">
      <p><%= entry.situation.capitalize %>: <%= entry.situation_details %></p>
      <p>Did I control my actions: <%= entry.action %> </p>
      <p>Turned out well: <%= entry.consequence %> </p>
    </div>
  </div>
<% end %>
